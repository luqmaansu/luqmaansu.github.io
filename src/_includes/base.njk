<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% if title %}{{ title }} | {% endif %}{{ metadata.title }}</title>
    <meta name="description" content="{% if excerpt %}{{ excerpt }}{% else %}{{ metadata.description }}{% endif %}">
    <link rel="alternate" type="application/atom+xml" title="{{ metadata.title }}" href="/feed.xml">
    <script>
        (function() {
            const theme = localStorage.getItem('theme') ||
                (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
            document.documentElement.className = theme;
        })();
    </script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;500;700&display=swap');

        :root {
            --bg: #f5f5f0;
            --bg-card: #eaeae5;
            --text: #3a3a3a;
            --text-muted: #7a7a7a;
            --text-heading: #1a1a1a;
            --border: #d0d0c8;
            --hover-bg: #e0e0d8;
        }

        .dark {
            --bg: #2d2d2d;
            --bg-card: #353535;
            --text: #c8c8c8;
            --text-muted: #808080;
            --text-heading: #e8e8e8;
            --border: #444;
            --hover-bg: #3d3d3d;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'JetBrains Mono', 'Fira Code', 'SF Mono', 'Cascadia Code', monospace;
            font-size: 15px;
            line-height: 1.7;
            color: var(--text);
            background: var(--bg);
            transition: background-color 0.2s ease, color 0.2s ease;
            -webkit-font-smoothing: antialiased;
        }

        .container {
            max-width: 860px;
            margin: 0 auto;
            padding: 60px 24px;
        }

        /* Header */
        header {
            margin-bottom: 60px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .site-title {
            font-size: 1.1em;
            font-weight: 500;
            color: var(--text-heading);
            text-decoration: none;
        }

        .site-title:hover {
            opacity: 0.7;
        }

        .site-title .prompt {
            color: var(--text-muted);
            margin-right: 4px;
        }

        /* Theme toggle */
        .theme-toggle {
            background: transparent;
            border: none;
            cursor: pointer;
            font-family: inherit;
            font-size: 0.8em;
            color: var(--text-muted);
            padding: 0;
            transition: color 0.2s ease;
        }

        .theme-toggle:hover {
            color: var(--text-heading);
        }

        /* Navigation */
        nav {
            margin-bottom: 48px;
        }

        nav a {
            color: var(--text-muted);
            text-decoration: none;
            font-size: 0.85em;
            margin-right: 20px;
        }

        nav a:hover {
            color: var(--text-heading);
        }

        /* Main content */
        main {
            min-height: 50vh;
        }

        /* Post content */
        .post-content h1,
        .post-content h2,
        .post-content h3 {
            color: var(--text-heading);
            margin-top: 2em;
            margin-bottom: 0.5em;
            font-weight: 500;
        }

        .post-content h1 { font-size: 1.4em; }
        .post-content h2 { font-size: 1.15em; }
        .post-content h3 { font-size: 1em; }

        .post-content p {
            margin-bottom: 2em;
        }

        .post-content a {
            color: var(--text-heading);
            text-decoration: underline;
            text-underline-offset: 3px;
            text-decoration-color: var(--text-muted);
        }

        .post-content a:hover {
            text-decoration-color: var(--text-heading);
        }

        .post-content ul, .post-content ol {
            margin-bottom: 2em;
            padding-left: 1.5em;
        }

        .post-content li {
            margin-bottom: 0.3em;
        }

        .post-content pre, .post-content .mermaid {
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: 4px;
            padding: 16px;
            overflow-x: auto;
            margin-bottom: 2em;
            font-size: 0.9em;
        }

        .post-content code {
            font-family: inherit;
            font-size: 0.95em;
        }

        .post-content p code {
            background: var(--bg-card);
            padding: 2px 6px;
            border-radius: 3px;
            border: 1px solid var(--border);
        }

        .post-content blockquote {
            border-left: 2px solid var(--border);
            padding-left: 16px;
            color: var(--text-muted);
            margin-bottom: 1.2em;
        }

        /* Post header */
        .post-header {
            margin-bottom: 40px;
        }

        .post-title {
            font-size: 1.4em;
            font-weight: 500;
            color: var(--text-heading);
            margin-bottom: 8px;
        }

        .post-meta {
            display: flex;
            align-items: center;
            gap: 10px;
            flex-wrap: wrap;
        }

        .post-date {
            font-size: 0.85em;
            color: var(--text-muted);
        }

        .tag-pill {
            font-size: 0.75em;
            color: var(--text-muted);
            border: 1px solid var(--border);
            border-radius: 3px;
            padding: 1px 8px;
            position: relative;
            top: -1px;
        }

        /* Post grid (homepage) */
        .post-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            border-top: 1px solid var(--border);
            border-left: 1px solid var(--border);
        }

        .post-card {
            display: flex;
            flex-direction: column;
            text-decoration: none;
            color: inherit;
            border-right: 1px solid var(--border);
            border-bottom: 1px solid var(--border);
            overflow: hidden;
        }

        .post-card:hover {
            background-color: var(--hover-bg);
        }

        .post-card-thumb {
            aspect-ratio: 16 / 10;
            overflow: hidden;
        }

        .post-card-thumb img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }

        .post-card-placeholder {
            width: 100%;
            height: 100%;
            background: var(--bg);
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        .post-card-placeholder::before {
            content: '';
            position: absolute;
            inset: 0;
            background-image: radial-gradient(var(--border) 1px, transparent 1px);
            background-size: 20px 20px;
            opacity: 0.5;
        }

        .post-card-placeholder::after {
            content: attr(data-initial);
            font-size: 3.5em;
            font-weight: 300;
            color: var(--text-muted);
            opacity: 0.35;
            position: relative;
        }

        .post-card-body {
            padding: 16px 20px;
            border-top: 1px solid var(--border);
        }

        .post-card-title {
            font-size: 0.85em;
            font-weight: 500;
            color: var(--text-heading);
            margin-bottom: 4px;
        }

        .post-card-title .prompt {
            color: var(--text-muted);
        }

        .post-card-meta {
            display: flex;
            align-items: center;
            gap: 8px;
            flex-wrap: wrap;
        }

        .post-card-date {
            font-size: 0.75em;
            color: var(--text-muted);
        }

        .post-card .tag-pill {
            font-size: 0.7em;
        }

        /* Page heading */
        .page-heading {
            font-size: 1.1em;
            font-weight: 500;
            color: var(--text-heading);
            margin-bottom: 32px;
        }

        .page-heading .prompt {
            color: var(--text-muted);
        }

        /* Footer */
        footer {
            margin-top: 80px;
            padding-top: 24px;
            border-top: 1px solid var(--border);
            font-size: 0.8em;
            color: var(--text-muted);
        }

        /* Mermaid expand */
        .mermaid-wrap {
            position: relative;
        }

        .mermaid-expand {
            position: absolute;
            top: 8px;
            right: 8px;
            background: var(--bg);
            border: 1px solid var(--border);
            border-radius: 3px;
            color: var(--text-muted);
            font-family: inherit;
            font-size: 0.7em;
            padding: 2px 8px;
            cursor: pointer;
            opacity: 0;
            transition: opacity 0.15s ease, color 0.15s ease;
        }

        .mermaid-wrap:hover .mermaid-expand {
            opacity: 1;
        }

        .mermaid-expand:hover {
            color: var(--text-heading);
        }

        .mermaid-modal-overlay {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.6);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1000;
            cursor: pointer;
        }

        .mermaid-modal {
            background: var(--bg);
            border: 1px solid var(--border);
            border-radius: 4px;
            padding: 48px 32px 32px;
            width: 90vw;
            height: 85vh;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: default;
            position: relative;
            overflow: auto;
        }

        .mermaid-modal .mermaid-close {
            position: absolute;
            top: 12px;
            right: 16px;
            background: none;
            border: none;
            color: var(--text-muted);
            font-family: inherit;
            font-size: 0.8em;
            cursor: pointer;
            padding: 2px 6px;
            z-index: 1;
        }

        .mermaid-modal .mermaid-close:hover {
            color: var(--text-heading);
        }

        .mermaid-modal .mermaid {
            background: none;
            border: none;
            padding: 0;
            margin: 0;
        }

        .mermaid-modal .mermaid svg {
            width: 85vw;
            height: auto;
            max-height: 80vh;
        }

        /* Responsive */
        @media (max-width: 600px) {
            .container {
                padding: 40px 16px;
            }

            header {
                margin-bottom: 40px;
            }

            .post-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <a href="/" class="site-title">
                <span class="prompt">></span> {{ metadata.title }}
            </a>
            <button class="theme-toggle" onclick="toggleTheme()" aria-label="Toggle dark mode">[light]</button>
        </header>

        <main>
            {% if tags and "posts" in tags %}
            <article>
                <div class="post-header">
                    <h1 class="post-title">{{ title }}</h1>
                    <div class="post-meta">
                        <time class="post-date" datetime="{{ date | date }}">{{ date | date }}</time>
                        {%- for tag in tags %}{% if tag != "posts" %}<span class="tag-pill">{{ tag }}</span>{% endif %}{%- endfor %}
                    </div>
                </div>
                <div class="post-content">
                    {{ content | safe }}
                </div>
            </article>
            {% else %}
            {{ content | safe }}
            {% endif %}
        </main>

        <footer>
            <p>&copy; {{ metadata.title }}</p>
        </footer>
    </div>

    <script>
        function updateToggleLabel() {
            const btn = document.querySelector('.theme-toggle');
            if (btn) btn.textContent = document.documentElement.className === 'dark' ? '[light]' : '[dark]';
        }
        function toggleTheme() {
            const html = document.documentElement;
            html.className = html.className === 'dark' ? 'light' : 'dark';
            localStorage.setItem('theme', html.className);
            updateToggleLabel();
            if (window.reRenderMermaid) window.reRenderMermaid();
        }
        updateToggleLabel();
    </script>

    <script type="module">
        import mermaid from 'https://cdn.jsdelivr.net/npm/mermaid@11/dist/mermaid.esm.min.mjs';

        function renderMermaid() {
            const theme = document.documentElement.className;
            mermaid.initialize({
                startOnLoad: false,
                theme: theme === 'dark' ? 'dark' : 'default'
            });

            const mermaidBlocks = document.querySelectorAll('pre code.language-mermaid');
            mermaidBlocks.forEach((block, index) => {
                const wrap = document.createElement('div');
                wrap.className = 'mermaid-wrap';

                const source = block.textContent;

                const mermaidDiv = document.createElement('div');
                mermaidDiv.className = 'mermaid';
                mermaidDiv.textContent = source;
                mermaidDiv.id = 'mermaid-' + Date.now() + '-' + index;
                mermaidDiv.dataset.source = source;

                const btn = document.createElement('button');
                btn.className = 'mermaid-expand';
                btn.textContent = '[expand]';
                btn.addEventListener('click', () => expandMermaid(mermaidDiv));

                wrap.appendChild(mermaidDiv);
                wrap.appendChild(btn);
                block.parentNode.parentNode.replaceChild(wrap, block.parentNode);
            });

            if (mermaidBlocks.length > 0) {
                mermaid.run();
            }
        }

        async function expandMermaid(srcDiv) {
            const overlay = document.createElement('div');
            overlay.className = 'mermaid-modal-overlay';

            const modal = document.createElement('div');
            modal.className = 'mermaid-modal';

            const close = document.createElement('button');
            close.className = 'mermaid-close';
            close.textContent = '[close]';

            const diagram = document.createElement('div');
            diagram.className = 'mermaid';
            diagram.id = 'mermaid-modal-' + Date.now();

            diagram.textContent = srcDiv.dataset.source;

            modal.appendChild(close);
            modal.appendChild(diagram);
            overlay.appendChild(modal);
            document.body.appendChild(overlay);

            await mermaid.run({ nodes: [diagram] });

            const dismiss = () => overlay.remove();
            close.addEventListener('click', dismiss);
            overlay.addEventListener('click', (e) => { if (e.target === overlay) dismiss(); });
            document.addEventListener('keydown', function esc(e) {
                if (e.key === 'Escape') { dismiss(); document.removeEventListener('keydown', esc); }
            });
        }

        renderMermaid();

        // Re-render mermaid diagrams with updated theme
        window.reRenderMermaid = async function() {
            const theme = document.documentElement.className;
            mermaid.initialize({
                startOnLoad: false,
                theme: theme === 'dark' ? 'dark' : 'default'
            });
            const diagrams = document.querySelectorAll('.mermaid-wrap .mermaid');
            for (const div of diagrams) {
                if (div.dataset.source) {
                    div.removeAttribute('data-processed');
                    div.innerHTML = '';
                    div.textContent = div.dataset.source;
                    div.id = 'mermaid-' + Date.now() + '-' + Math.random().toString(36).slice(2);
                }
            }
            if (diagrams.length > 0) await mermaid.run();
        };

        // Re-render when 11ty hot reload morphs the DOM
        new MutationObserver(() => {
            if (document.querySelector('pre code.language-mermaid')) {
                renderMermaid();
            }
        }).observe(document.querySelector('main'), { childList: true, subtree: true });
    </script>
</body>
</html>
